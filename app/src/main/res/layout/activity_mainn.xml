<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainnActivity"
    android:background="#fff"
    android:weightSum="9"
    android:id="@+id/rela">
    <androidx.appcompat.widget.Toolbar
      android:id="@+id/scien"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#000"
        app:title="SC Calculator"
        app:titleTextColor="@color/backbutt"></androidx.appcompat.widget.Toolbar>


    <EditText
        android:padding="0dp"
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:fadeScrollbars="false"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:textColorLink="#000000"
        android:textCursorDrawable="@color/colorPrimaryDark"
        android:textSize="@dimen/_32sdp"
        app:backgroundTint="#fff"></EditText>

    <TextView
        android:scrollbars="vertical"
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/_30sdp"
        android:layout_below="@+id/edit"
        android:gravity="top|left"
        android:textColor="#1F5222"
        android:padding="0dp"


        ></TextView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        >
        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button

                android:id="@+id/pow"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"

                android:background="@color/backbutt"
                android:text="^"
                android:textColor="#000"
                android:textSize="@dimen/_18sdp"></Button>

            <Button
                android:id="@+id/steps"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="Steps"
                android:layout_gravity="center"
                android:gravity="center"

                android:textColor="#000"
                android:textSize="@dimen/_18sdp"></Button>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/re"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/ic_backspace_black_24dp"
                android:background="@color/backbutt"

                ></androidx.appcompat.widget.AppCompatImageButton>

        </TableRow>

        <TableRow

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:layout_weight="1">
            <Button
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/sin"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/marcor"
                android:text="sin"
                android:background="?colorPrimaryDark"
                android:textColor="@color/backbutt"
                android:textSize="@dimen/ln"></Button>

            <Button
                android:layout_gravity="center"
                android:gravity="center"

                android:id="@+id/cos"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/marcor"
                android:text="cos"
                android:background="?colorPrimaryDark"
                android:textColor="@color/backbutt"
                android:textSize="@dimen/ln"></Button>

            <Button
                android:layout_gravity="center"
                android:gravity="center"


                android:id="@+id/tan"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/marcor"
                android:text="tan"
                android:background="?colorPrimaryDark"
                android:textColor="@color/backbutt"
                android:textSize="@dimen/ln"></Button>

            <Button
                android:layout_gravity="center"
                android:gravity="center"

                android:id="@+id/sec"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/marcor"
                android:text="sec"
                android:background="?colorPrimaryDark"
                android:textColor="@color/backbutt"
                android:textSize="@dimen/_13sdp"></Button>

            <Button
                android:id="@+id/c"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?colorPrimaryDark"
                android:textColor="@color/backbutt"
                android:layout_gravity="center"
                android:gravity="center"

                android:text="C"
                android:layout_margin="@dimen/marcor"
                android:textSize="@dimen/ln"></Button>

            <Button
                android:id="@+id/pat"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?colorPrimaryDark"
                android:textColor="@color/backbutt"
                android:text="( )"
                android:layout_gravity="center"
                android:gravity="center"

                android:layout_margin="@dimen/marcor"
                android:textSize="@dimen/ln"

                ></Button>

            <Button
                android:id="@+id/div2"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="%"
                android:layout_margin="@dimen/marcor"
                android:layout_gravity="center"
                android:gravity="center"

                android:background="?colorPrimaryDark"
                android:textColor="@color/backbutt"
                android:textSize="@dimen/ln"
                ></Button>

            <Button
                android:id="@+id/div"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?colorPrimaryDark"
                android:textColor="@color/backbutt"
                android:text="÷"
                android:layout_gravity="center"
                android:gravity="center"

                android:layout_margin="@dimen/marcor"
                android:textSize="@dimen/ln"
                ></Button>

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/csc"
                android:layout_gravity="center"
                android:gravity="center"

                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="csc"
                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:textSize="@dimen/ln"
                ></Button>

            <Button
                android:layout_gravity="center"
                android:gravity="center"

                android:id="@+id/cot"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="cot"
                android:textColor="#000"
                android:textSize="@dimen/ln"
                android:layout_margin="@dimen/marcor"
                android:minHeight="@dimen/min2"></Button>

            <Button
                android:id="@+id/asin"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="@string/d2"
                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:textSize="@dimen/ln"
                android:layout_gravity="center"
                android:gravity="center"

                ></Button>

            <Button
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/acos"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="@string/d1"
                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:textSize="@dimen/ln"
                ></Button>


            <Button
                android:id="@+id/n7"
                android:layout_gravity="center"
                android:gravity="center"
android:fontFamily="sans-serif"
                style="'@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="7"
                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:textSize="@dimen/ln"
                ></Button>

            <Button
                android:id="@+id/n8"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="8"
                android:layout_margin="@dimen/marcor"
                android:layout_gravity="center"
                android:gravity="center"

                android:textColor="#000"
                android:textSize="@dimen/ln"
                ></Button>

            <Button
                android:id="@+id/n9"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="9"
                android:textColor="#000"
                android:layout_margin="@dimen/marcor"
                android:textSize="@dimen/ln"
                android:layout_gravity="center"
                android:gravity="center"
                ></Button>

            <Button
                android:id="@+id/multi"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?colorPrimaryDark"
                android:textColor="@color/backbutt"
                android:shadowColor="#76FF03"
                android:text="×"
                android:layout_margin="@dimen/marcor"
                android:textIsSelectable="false"
                android:textSize="@dimen/ln"
                android:layout_gravity="center"
                android:gravity="center"

                ></Button>

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/atan"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"

                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="@string/d3"
                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:textSize="@dimen/ln"
                ></Button>

            <Button
                android:layout_gravity="center"
                android:gravity="center"

                android:id="@+id/log"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="@string/de"
                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:textSize="@dimen/ln"

                ></Button>

            <Button
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/logten"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="@string/d4"
                android:textColor="#000"
                android:layout_margin="@dimen/marcor"
                android:textSize="@dimen/ln"
                android:paddingBottom="0.5dp"
                ></Button>

            <Button
                android:layout_gravity="center"
                android:gravity="center"

                android:id="@+id/abs"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="|x|"
                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:textSize="@dimen/ln"
                ></Button>


            <Button
                android:layout_gravity="center"
                android:gravity="center"

                android:id="@+id/n4"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="4"
                android:textColor="#000"
                android:layout_margin="@dimen/marcor"
                android:textSize="@dimen/ln"
                ></Button>

            <Button
                android:id="@+id/n5"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:layout_margin="@dimen/marcor"
                android:text="5"
                android:layout_gravity="center"
                android:gravity="center"

                android:textColor="#000"
                android:textSize="@dimen/ln"
                ></Button>

            <Button
                android:id="@+id/n6"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="6"
                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:textSize="@dimen/ln"
                android:layout_gravity="center"
                android:gravity="center"

                ></Button>

            <Button
                android:id="@+id/min"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?colorPrimaryDark"
                android:textColor="@color/backbutt"
                android:text="−"
                android:layout_margin="@dimen/marcor"
                android:layout_gravity="center"
                android:gravity="center"

                android:textSize="@dimen/ln"
                android:textStyle="normal"
                ></Button>

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_gravity="center"
                android:gravity="center"

                android:id="@+id/e"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="e"
                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:textSize="@dimen/ln"

                ></Button>

            <Button
                android:layout_gravity="center"
                android:gravity="center"

                android:id="@+id/pi"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="π"
                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:textSize="@dimen/ln"
                ></Button>

            <Button


                android:id="@+id/ln"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="ln"
                android:textColor="#000"
                android:textSize="@dimen/ln"
                android:layout_margin="@dimen/marcor"
                android:layout_gravity="center"
                android:gravity="center"

                ></Button>

            <Button
                android:layout_gravity="center"
                android:gravity="center"

                android:id="@+id/fac"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="x!"
                android:textColor="#000"
                android:layout_margin="@dimen/marcor"
                android:textSize="@dimen/ln"
                ></Button>

            <Button
                android:layout_gravity="center"
                android:gravity="center"

                android:id="@+id/n1"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="1"
                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:textSize="@dimen/ln"
                ></Button>

            <Button
                android:id="@+id/n2"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"

                android:background="@color/backbutt"
                android:text="2"
                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:textSize="@dimen/ln"
                ></Button>

            <Button
                android:id="@+id/n3"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="3"
                android:textColor="#000"
                android:layout_margin="@dimen/marcor"
                android:textSize="@dimen/ln"
                android:layout_gravity="center"
                android:gravity="center"

                ></Button>


            <Button
                android:id="@+id/plus"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?colorPrimaryDark"
                android:textColor="@color/backbutt"
                android:text="+"
                android:layout_margin="@dimen/marcor"
                android:layout_gravity="center"
                android:gravity="center"

                android:textSize="@dimen/ln"
                ></Button>

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Space
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/marcor"
                android:layout_height="match_parent"
                android:layout_weight="1"></Space>

            <Space
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/marcor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></Space>

            <Button
                android:layout_gravity="center"


                android:id="@+id/deaasld"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/marcor"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:gravity="center"
                android:textColor="#000"
                android:text="DEG"
                android:textSize="@dimen/ln"></Button>
            <Button
                android:id="@+id/root"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="√"
                android:layout_gravity="center"
                android:gravity="center"

                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:textSize="@dimen/ln"></Button>


            <Button
                android:layout_gravity="center"
                android:gravity="center"

                android:id="@+id/n0"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="0"
                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:textSize="@dimen/ln"></Button>

            <Button
                android:id="@+id/dot"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"

                android:background="@color/backbutt"
                android:text="."
                android:textColor="#000"
                android:layout_margin="@dimen/marcor"
                android:textSize="@dimen/ln"></Button>

            <Button
                android:id="@+id/an"
                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backbutt"
                android:text="an"
                android:layout_margin="@dimen/marcor"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"


                android:textSize="@dimen/ln"></Button>



            <Button
                android:id="@+id/eq"
                android:layout_gravity="center"
                android:gravity="center"

                style="@android:style/Widget.Button.Small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#3890B8"
                android:text="="
                android:layout_margin="@dimen/marcor"
                android:textColor="#fff"
                android:textSize="@dimen/ln"
                ></Button>

        </TableRow>


    </TableLayout>






</LinearLayout>